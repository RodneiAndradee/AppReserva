<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Fundo branco com bordas arredondadas e borda cinza -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FBFAFA" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#E0E0E0" />
        </shape>
    </item>

    <!-- Ícone da seta no canto direito com tamanho fixo -->
    <item android:gravity="end|center_vertical" android:right="12dp">
        <inset
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp">
            <scale
                android:scaleWidth="false"
                android:scaleHeight="false"
                android:drawable="@drawable/ic_arrow_drop_down" />
        </inset>
    </item>
</layer-list>
