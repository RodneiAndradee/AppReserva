<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_request_room_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sala [Room ID] - [Date]"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_request_professor_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prof. [Professor Name] - [Time]"
            android:textColor="#666666"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_request_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Material: [Material]"
            android:textColor="#666666"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_request_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anotações: [Notes]"
            android:textColor="#666666"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="4dp"/> <TextView
        android:id="@+id/tv_request_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Pendente"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rejeitar"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF4444"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_approve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aprovar"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>