<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema base do aplicativo -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Cores primárias e secundárias aqui -->
    </style>

    <!-- Tema específico para o CalendarView -->
    <style name="CalendarTheme" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorAccent">#4285F4</item> <!-- Cor do dia selecionado -->
        <item name="android:textColorPrimary">#333333</item> <!-- Cor do texto dos dias -->
        <item name="android:textColorSecondary">#999999</item> <!-- Cor do texto dos dias da semana -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:headerMonthTextAppearance">@style/CalendarHeaderText</item>
    </style>

    <!-- Estilo para o texto dos dias no calendário -->
    <style name="CalendarDateText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!-- Estilo para o cabeçalho do mês -->
    <style name="CalendarHeaderText" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
    </style>
</resources>